@model IEnumerable<BookStore.Models.Product>

@{
    Layout = null;
    ViewBag.Title = "FasheAdmin";
}

@Html.Partial("~/Views/AdminPanel/Header.cshtml")
@Html.Partial("~/Views/PartialViews/IncludeCSS.cshtml")


<h2 class="titleAP">Products</h2>
<button class="add_product_btn">
    @Html.ActionLink("Add new", "Create")
</button>

<div class="row">
    <div class="col-md-2 menu_wrapper">
        @Html.Partial("~/Views/AdminPanel/AdminMenu.cshtml")
    </div>
    <div class="col-md-9">
        <div class="row">

            @foreach (var item in Model)
            {
                <div class="col-sm-12 col-md-3 col-lg-3 p-b-50">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-img wrap-pic-w of-hidden pos-relative">
                            <img src="~/ProductImages/@item.ImageProducts.FirstOrDefault().ImageName" alt="IMG-PRODUCT">

                            <div class="block2-overlay trans-0-4">
                                <a href="@Url.Action("Delete", "AdminPanel", new { id = item.Id })" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                    <i class="icon-wishlist fas fa-times delete_icon" aria-hidden="true"></i>
                                    <i class="icon-wishlist fas fa-times dis-none delete_icon" aria-hidden="true"></i>
                                </a>

                                <div class="block2-btn-addcart w-size1 trans-0-4">
                                    <!-- Button -->
                                    <a href="@Url.Action("Edit", "AdminPanel", new { id = item.Id })">
                                        <div class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                                            Edit
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="block2-txt p-t-20">
                            <a href="@Url.Action("ProductDetails", "Products")" class="block2-name dis-block s-text3 p-b-5">
                                @Html.DisplayFor(modelItem => item.Name)
                            </a>

                            <span class="block2-price m-text6 p-r-5">
                                $@Html.DisplayFor(modelItem => item.Price)
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
